<nav class="navbar-home">
  <%= link_to 'Clases', payments_new_path, class: 'button-white' %>
  <%= link_to root_path do %>
    <%= image_tag("mun_logo.svg") %>
  <% end %>
  <% if current_user %>
    <%= link_to "Mi Cuenta", edit_user_registration_path, class: 'button-orange'  %>
  <% else %>
    <%= link_to 'Iniciar sesión', new_user_session_path, class: 'button-green' %>
  <% end %>
</nav>

<div class="registrationContainer registrationContainer-alt">
  <div class="registrationContainer-form">
    <h2>Información de tu cuenta</h2>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %> <i>(deja en blanco si no quieres cambiarla)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> caracteres mínimo</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label "Confirma nuevo password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
      </div>

      <div class="field">
        <%= f.label "Password actual" %> <i>(para guardar cambios)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "button-orange" %>
      </div>
    <% end %>
  </div>
  <div  class="registrationContainer-form">
    <h2>Tus clases en Mun</h2>
    <br>
    <p>Clases disponibles: <%= current_user.yogaclass %></p>
    <p>Vigencia: <%= current_user.enddate %></p>
    <br><br>
    <h2>Editar Membresía</h2>
    <br>
    <%= button_to 'Portal de pagos', stripe_billing_portal_path, data: { turbo: "false" }, class: "button-orange" %>
    <br>
    <hr>
    <br>
    <h2>Cerrar sesión</h2>
    <br>
    <%= link_to "Cerrar Sesión", destroy_user_session_path, data: { turbo_method: :delete }, class: "button-white" %>
  </div>
</div>

