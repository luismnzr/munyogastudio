<div style="max-width: 1200px; margin: 0 auto; padding: 30px;">
  <h1>Mis Reservas</h1>

  <div style="background: #fbeeed; padding: 20px; border-radius: 10px; margin: 20px 0;">
    <p style="font-size: 18px;"><strong>Clases disponibles: <%= current_user.yogaclass %></strong></p>
    <%= link_to 'Comprar m치s clases', payments_new_path, class: 'button-green', style: 'display: inline-block; margin-top: 10px;' %>
  </div>

  <h2 style="margin-top: 40px;">Pr칩ximas Clases</h2>

  <% if @upcoming_reservations.any? %>
    <% @upcoming_reservations.each do |reservation| %>
      <% session = reservation.class_session %>
      <div style="background: #fbeeed; padding: 20px; border-radius: 10px; margin: 15px 0;">
        <h3 style="margin-top: 0;"><%= session.class_type %></h3>
        <p><strong>游늰 <%= session.date.strftime('%A, %B %d, %Y') %></strong></p>
        <p>游뎷 <%= session.start_time.strftime('%I:%M %p') %> - <%= session.end_time.strftime('%I:%M %p') %></p>
        <% if session.instructor_name.present? %>
          <p>游녻 <%= session.instructor_name %></p>
        <% end %>
        <p style="font-size: 14px; color: #666;">Reservada el <%= reservation.created_at.strftime('%d/%m/%Y') %></p>

        <% if reservation.can_cancel? %>
          <%= button_to 'Cancelar Reserva', reservation_path(reservation), method: :delete, data: { confirm: '쮼st치s seguro? Tu clase ser치 devuelta.' }, style: 'background: #dc3545; color: white; border: none; padding: 10px 20px; border-radius: 30px; cursor: pointer; margin-top: 10px;' %>
          <p style="font-size: 12px; color: #666; margin-top: 5px;">Puedes cancelar hasta 8 horas antes de la clase</p>
        <% else %>
          <p style="background: #fff3cd; padding: 10px; border-radius: 5px; margin-top: 10px; font-size: 14px;">丘멆잺 No se puede cancelar - faltan menos de 8 horas</p>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <p style="color: #666; margin: 20px 0;">No tienes reservas pr칩ximas.</p>
    <%= link_to 'Ver Calendario', calendario_path, class: 'button-green', style: 'display: inline-block;' %>
  <% end %>
</div>
