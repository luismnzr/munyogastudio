<div class="admin-form-container">
  <h1>Edit User</h1>

  <%= form_with(model: [:admin, @user], local: true) do |form| %>
    <% if @user.errors.any? %>
      <div class="errors">
        <h3><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control', placeholder: 'Full name' %>
    </div>

    <div class="form-row">
      <div class="form-group">
        <%= form.label :yogaclass, 'Available Classes' %>
        <%= form.number_field :yogaclass, class: 'form-control', min: 0 %>
        <small class="form-text">Number of classes the user can book</small>
      </div>

      <div class="form-group">
        <%= form.label :enddate, 'Subscription End Date' %>
        <%= form.date_field :enddate, class: 'form-control' %>
        <small class="form-text">When the user's subscription expires</small>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :admin, 'Administrator' %>
      <div class="checkbox-wrapper">
        <%= form.check_box :admin, class: 'form-check-input' %>
        <label class="form-check-label">
          Grant admin privileges (access to admin panel)
        </label>
      </div>
    </div>

    <div class="info-box">
      <h4>Account Information</h4>
      <p><strong>Stripe ID:</strong> <%= @user.stripe_id || 'Not set' %></p>
      <p><strong>Created:</strong> <%= @user.created_at.strftime('%B %d, %Y') %></p>
      <p><strong>Last Updated:</strong> <%= @user.updated_at.strftime('%B %d, %Y') %></p>
    </div>

    <div class="actions">
      <%= form.submit 'Update User', class: 'btn btn-success' %>
      <%= link_to 'Cancel', admin_user_path(@user), class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>

<style>
  .admin-form-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 30px;
  }

  .admin-form-container h1 {
    margin-bottom: 30px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .form-group label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
  }

  .form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 16px;
  }

  .form-text {
    display: block;
    margin-top: 5px;
    color: #6c757d;
    font-size: 14px;
  }

  .checkbox-wrapper {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px;
    background-color: #f8f9fa;
    border-radius: 4px;
  }

  .form-check-input {
    width: 20px;
    height: 20px;
    cursor: pointer;
  }

  .form-check-label {
    margin: 0;
    cursor: pointer;
  }

  .info-box {
    background-color: #e7f3ff;
    border: 1px solid #b3d9ff;
    border-radius: 8px;
    padding: 20px;
    margin: 30px 0;
  }

  .info-box h4 {
    margin-top: 0;
    margin-bottom: 15px;
    color: #0066cc;
  }

  .info-box p {
    margin: 8px 0;
    font-size: 14px;
  }

  .errors {
    background-color: #f8d7da;
    border: 1px solid #f5c6cb;
    border-radius: 4px;
    padding: 15px;
    margin-bottom: 20px;
  }

  .errors h3 {
    color: #721c24;
    margin: 0 0 10px 0;
    font-size: 16px;
  }

  .errors ul {
    margin: 0;
    padding-left: 20px;
  }

  .errors li {
    color: #721c24;
  }

  .actions {
    margin-top: 30px;
    display: flex;
    gap: 10px;
  }

  .btn {
    padding: 12px 24px;
    text-decoration: none;
    border-radius: 5px;
    display: inline-block;
    border: none;
    cursor: pointer;
    font-size: 16px;
  }

  .btn-success {
    background-color: #28a745;
    color: white;
  }

  .btn-success:hover {
    background-color: #218838;
  }

  .btn-secondary {
    background-color: #6c757d;
    color: white;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
  }
</style>
