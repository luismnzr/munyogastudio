<h1>Class Schedule Management</h1>

<%= link_to 'Schedule New Class', new_admin_class_session_path, class: 'button-green', style: 'display:inline-block; margin: 20px 0;' %>

<table style="width:100%; border-collapse: collapse; margin-top: 20px;">
  <thead style="background: #253938; color: white;">
    <tr>
      <th style="padding: 12px; border: 1px solid #ddd;">Date</th>
      <th style="padding: 12px; border: 1px solid #ddd;">Time</th>
      <th style="padding: 12px; border: 1px solid #ddd;">Class Type</th>
      <th style="padding: 12px; border: 1px solid #ddd;">Instructor</th>
      <th style="padding: 12px; border: 1px solid #ddd;">Spots</th>
      <th style="padding: 12px; border: 1px solid #ddd;">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @class_sessions.each do |session| %>
      <tr style="background: #fbeeed;">
        <td style="padding: 10px; border: 1px solid #ddd;"><%= session.date.strftime('%A, %b %d') %></td>
        <td style="padding: 10px; border: 1px solid #ddd;"><%= session.start_time.strftime('%I:%M %p') %></td>
        <td style="padding: 10px; border: 1px solid #ddd;"><%= session.class_type %></td>
        <td style="padding: 10px; border: 1px solid #ddd;"><%= session.instructor_name || '-' %></td>
        <td style="padding: 10px; border: 1px solid #ddd;"><%= session.available_spots %> / <%= session.capacity %></td>
        <td style="padding: 10px; border: 1px solid #ddd;">
          <%= link_to 'View', admin_class_session_path(session), style: 'color: #007bff; margin-right: 10px;' %>
          <%= link_to 'Edit', edit_admin_class_session_path(session), style: 'color: #ffc107; margin-right: 10px;' %>
          <%= link_to 'Delete', admin_class_session_path(session), method: :delete, data: { confirm: 'Are you sure?' }, style: 'color: #dc3545;' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
