<div class="containerPrices">
    <h2>Compra tus clases online</h2>
    <br>
    <p>Las clases son drop-in, no necesitas hacer reservaciones</p>
    <div class="container containerPrices-grid">
        <div class="containerPrices-item">
            <h2>1 Clase</h2>
            <br>
            <p>$250</p>
            <br>
                <% if user_signed_in? %>
                    <%= button_to 'Comprar', payments_create_path(plan_id: 'price_1Q0y68BLJNSq80FfhBBtR6P3'), method: :post, remote: true, data: { turbo: false }, class: 'button-orange' %>
                <% else %>
                    <%= link_to 'Comprar', new_user_registration_path, class: 'button-orange' %>
                <% end %>
        </div>
        <div class="containerPrices-item">
            <h2>4 Clases</h2>
            <br>
            <p>$1,100</p>
            <br>
            <a href="#" class="button-orange">Comprar clase</a>
        </div>
        <div class="containerPrices-item">
            <h2>8 Clases</h2>
            <br>
            <p>$1,500</p>
            <br>
            <a href="#" class="button-orange">Comprar clase</a>
        </div>
        <div class="containerPrices-item">
            <h2>12 Clases</h2>
            <br>
            <p>$1,950</p>
            <br>
            <a href="#" class="button-orange">Comprar clase</a>
        </div>
    </div>
    <%= image_tag("lotus.svg") %>
</div>